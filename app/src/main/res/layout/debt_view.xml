<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contact_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:src="@drawable/contacts_icon"
        android:layout_alignBottom="@+id/bill_info"
        android:layout_alignTop="@+id/contact_name"
        >
    </ImageView>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:gravity="left"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/contact_picture"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/contact_price"
        android:text="name"
        android:layout_toEndOf="@+id/contact_picture">
    </TextView>

    <TextView
        android:id="@+id/contact_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical|right"
        android:textSize="35dp"
        android:letterSpacing="0.03"
        android:layout_toEndOf="@id/contact_picture"
        android:layout_alignParentTop="false"
        android:text="price"
        android:layout_below="@+id/contact_name"
        android:layout_alignParentStart="false"
        android:layout_toRightOf="@+id/contact_picture">
    </TextView>

    <TextView
        android:id="@+id/bill_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="0dp"
        android:paddingBottom="4dp"
        android:gravity="left"
        android:textSize="18dp"
        android:layout_alignStart="@+id/contact_price"
        android:text="info"
        android:layout_toRightOf="@+id/contact_picture"
        android:layout_below="@+id/contact_price"
        android:layout_toEndOf="@+id/contact_picture">
    </TextView>

    <!--android:buttonTint="@color/NORMAL_STATE_COLOR"-->

    <!--android:textColor="@color/user_text_select_color"-->

</RelativeLayout>