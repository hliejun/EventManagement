<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="sg.edu.nus.comp.orbital.eventmanagement.UserLoginActivity"
                android:id="@+id/user_login_layout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/startMain"
        android:layout_alignParentStart="true"
        android:onClick="goToMain"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/NORMAL_STATE_COLOR"
        android:layout_alignEnd="@+id/imageView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/main_logo"
        android:layout_above="@+id/startMain"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="219dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="O.perational $.plit P.ayment $.ystem"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="320dp"/>
</RelativeLayout>
