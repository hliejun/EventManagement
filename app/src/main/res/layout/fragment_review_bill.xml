<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/material_blue_grey_800"
    tools:context="sg.edu.nus.comp.orbital.eventmanagement.ReviewBillActivityFragment">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/UserCostList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/createDebtsButton"
        android:layout_below="@+id/bill_image"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Debts"
        android:id="@+id/createDebtsButton"
        android:layout_alignParentStart="true"
        android:onClick="createDebts"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/NORMAL_STATE_COLOR"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind Friends"
        android:id="@+id/remindPayButton"
        android:layout_alignTop="@+id/createDebtsButton"
        android:layout_toEndOf="@+id/createDebtsButton"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:backgroundTint="@color/NORMAL_STATE_COLOR"
        android:onClick="remindFriends"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bills"
        android:id="@+id/backToMain"
        android:layout_toEndOf="@+id/remindPayButton"
        android:layout_alignTop="@+id/createDebtsButton"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:backgroundTint="@color/NORMAL_STATE_COLOR"
        android:focusableInTouchMode="false"
        android:onClick="backHome"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bill_image"
        android:src="@drawable/bills_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
